.message{data: {id: "#{message.id}"}}
  .upper-info
    %p.upper-info-user
      = message.user.name
    %p.upper-info-date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-info
    - if message.content.present?
      %p.message-text
        = message.content
    = image_tag message.image.url, class: 'image' if message.image.present?,